@model IEnumerable<InventoryOrder.ViewModel.ProductViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1> </h1>

<p>
    <a asp-action="Create" class="btn btn-primary">@localizer["Create New"]</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Product.ProductID)</th>
            <th>@Html.DisplayNameFor(model => model.First().Product.Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Product.PurchasePrice)</th>
            <th>@Html.DisplayNameFor(model => model.First().Product.SellingPrice)</th>
            <th>@Html.DisplayNameFor(model => model.First().Product.QuantityInStock)</th>
            <th>@Html.DisplayNameFor(model => model.First().WarehouseName)</th>
            <th>@localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Product.ProductID)</td>
                <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Product.PurchasePrice)</td>
                <td>@Html.DisplayFor(modelItem => item.Product.SellingPrice)</td>
                <td>@Html.DisplayFor(modelItem => item.Product.QuantityInStock)</td>
                <td>@Html.DisplayFor(modelItem => item.WarehouseName)</td>
                <td>
                    <a href="@Url.Action("Edit", "Products", new { id = item.Product.ProductID })" class="btn btn-warning btn-sm">
                        @localizer["Edit"]
                    </a> |
                    <a href="@Url.Action("Delete", "Products", new { id = item.Product.ProductID })" class="btn btn-danger btn-sm">
                        @localizer["Delete"]
                    </a> |
                    <a href="@Url.Action("Details", "Products", new { id = item.Product.ProductID })" class="btn btn-info btn-sm">
                        @localizer["Details"]
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
