@model InventoryOrder.Models.intity.Customer

@{
    ViewData["Title"] = localizer["Details"];
}

<h1>@localizer["Details"]</h1>

<h4>@localizer["Customer"]</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <!--Centered details view-->
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" readonly /> <!-- Readonly to prevent editing -->
        </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" readonly /> <!-- Readonly to prevent editing -->
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="control-label"></label>
            <input asp-for="Phone" class="form-control" readonly /> <!-- Readonly to prevent editing -->
        </div>
        <div class="form-group">
            <label asp-for="AccountBalance" class="control-label"></label>
            <input asp-for="AccountBalance" class="form-control" readonly /> <!-- Readonly to prevent editing -->
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.CustomerID" class="btn btn-warning">@localizer["Edit"]</a> <!-- Button for editing -->
    <a asp-action="Index" class="btn btn-secondary">@localizer["Back To List"]</a> <!-- Styled link -->
</div>

<h3>@localizer["Orders"]</h3>
<table class="table">
    <thead>
        <tr>
            <th>@localizer["Order Number"]</th>
            <th>@localizer["Order Date"]</th>
            <th>@localizer["Total Amount"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.TotalAmount</td>
            </tr>
        }
    </tbody>
</table>

<h3>@localizer["Payments"]</h3>
<table class="table">
    <thead>
        <tr>
            <th>@localizer["Payment Number"]</th>
            <th>@localizer["Payment Date"]</th>
            <th>@localizer["Amount"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model.PaymentCustomers)
        {
            <tr>
                <td>@payment.PaymentCustomerID</td>
                <td>@payment.PaymentDate.ToShortDateString()</td>
                <td>@payment.Amount</td>
         
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
