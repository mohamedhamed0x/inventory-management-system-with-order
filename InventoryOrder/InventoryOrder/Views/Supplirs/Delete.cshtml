@model InventoryOrder.Models.intity.Supplier

@{
    ViewData["Title"] = localizer["Delete"];
}

<h1>@localizer["Delete"]</h1>

<h3>@localizer["Areyousureyou"]</h3>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4>@localizer["Supplier"]</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4" hidden>
                @Html.DisplayNameFor(model => model.SupplierID)
            </dt>
            <dd class="col-sm-8" hidden>
                @Html.DisplayFor(model => model.SupplierID)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.AccountBalance)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.AccountBalance)
            </dd>
        </dl>
    </div>
</div>

<div class="text-center">
    <form asp-action="Delete">
        <button type="submit" class="btn btn-danger">
            @localizer["Delete"]
        </button> |
        <a asp-action="Index" class="btn btn-secondary">@localizer["BacktoList"]</a>
    </form>
</div>
@section Scripts {
    <script>
        function confirmDeletion() {
            return confirm('@localizer["Are you sure you want to delete this item?"]');
        }
    </script>
}
