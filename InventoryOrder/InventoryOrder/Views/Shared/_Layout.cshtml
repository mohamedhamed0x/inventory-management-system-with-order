<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand text-white" href="#">InventoryOrder</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item @(ViewData["ActivePage"] == "Home" ? "active selected" : "")">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">@localizer["Home"]</a>
                    </li>
                    <li class="nav-item @(ViewData["ActivePage"] == "Products" ? "active selected" : "")">
                        <a class="nav-link" href="@Url.Action("Index", "Products")">@localizer["Products"]</a>
                    </li>
                    <li class="nav-item @(ViewData["ActivePage"] == "Customers" ? "active selected" : "")">
                        <a class="nav-link" href="@Url.Action("Index", "Customers")">@localizer["Customers"]</a>
                    </li>
                    <li class="nav-item @(ViewData["ActivePage"] == "Supplirs" ? "active selected" : "")">
                        <a class="nav-link" href="@Url.Action("Index", "Supplirs")">@localizer["Supplirs"]</a>
                    </li>
                    <li class="nav-item @(ViewData["ActivePage"] == "Orders" ? "active selected" : "")">
                        <a class="nav-link" href="@Url.Action("Index", "Orders")">@localizer["Orders"]</a>
                    </li>
                    <li class="nav-item @(ViewData["ActivePage"] == "Purchases" ? "active selected" : "")">
                        <a class="nav-link" href="@Url.Action("Index", "Purchases")">@localizer["Purchases"]</a>
                    </li>
                    <li class="nav-item @(ViewData["ActivePage"] == "Payments" ? "active selected" : "")">
                        <a class="nav-link" href="@Url.Action("Index", "Payments")">@localizer["Payments"]</a>
                    </li>
                    <li class="nav-item @(ViewData["ActivePage"] == "Warehouses" ? "active selected" : "")">
                        <a class="nav-link" href="@Url.Action("Index", "Warehouses")">@localizer["Warehouses"]</a>
                    </li>
                </ul>
                <div class="ml-auto">
                    <partial name="_SelectLanguagePartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid flex-grow-1">
        <main role="main" class="col-md-12 ms-sm-auto col-lg-12 px-4">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center py-4">
        <p>@localizer["© 2024 InventoryOrder. All Rights Reserved."]</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
