@model IEnumerable<InventoryOrder.ViewModel.OrderViewModel>

@{
    ViewData["Title"] = localizer["Index"];
}

<h1> </h1>

<p>
    <a asp-action="Create" class="btn btn-primary">@localizer["Create New"]</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Order.OrderID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Order.OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().CustomerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Order.TotalAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().WarehouseName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order.OrderID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order.TotalAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WarehouseName)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Orders", new { id = item.Order.OrderID })" class="btn btn-warning btn-sm">@localizer["Edit"]</a>
                        <a href="@Url.Action("Delete", "Orders", new { id = item.Order.OrderID })" class="btn btn-danger btn-sm">@localizer["Delete"]</a>
                        <a href="@Url.Action("Details", "Orders", new { id = item.Order.OrderID })" class="btn btn-info btn-sm">@localizer["Details"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

