@model InventoryOrder.Models.intity.Order

@{
    ViewData["Title"] = localizer["Delete"];
}

<div class="container mt-5">
    <h1 class="text-danger">@localizer["Delete"]</h1>
    <h3>@localizer["Are you sure you want to delete this Order?"]</h3>
    <div class="alert alert-warning" role="alert">
        @localizer["This action cannot be undone!"]
    </div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderID)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderID)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderDate)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CustomerID)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CustomerID)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TotalAmount)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TotalAmount)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.WarehouseID)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.WarehouseID)</dd>
    </dl>

    <form asp-action="Delete">
        <button type="submit" class="btn btn-danger">@localizer["Delete"]</button>
        <a asp-action="Index" class="btn btn-secondary">@localizer["Back to List"]</a>
    </form>
</div>
